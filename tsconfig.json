{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "astro/client",
      "@types/react",
      "@types/react-dom"
    ],
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@layouts/*": [
        "./src/layouts/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@i18n/*": [
        "./src/i18n/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/env.d.ts"
  ]
}